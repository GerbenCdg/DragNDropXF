<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DragNDropXF"
             xmlns:customControl="clr-namespace:DragNDropXF.CustomControl"
             xmlns:skia="clr-namespace:SkiaSharp;assembly=SkiaSharp"
             x:Class="DragNDropXF.MainPage">

    <ContentPage.Resources>
        <skia:SKPaint x:Key="SKPaint" Color="{x:Static skia:SKColors.BlueViolet}"/>
    </ContentPage.Resources>

    <StackLayout>

        <customControl:DraggableViewContainer x:Name="dvc1"
                BackgroundColor="DarkOliveGreen">

            <customControl:DraggableView x:Name="XamlDraggableView"
                    HeightRequest="100" WidthRequest="100"
                    />

        </customControl:DraggableViewContainer>

        <customControl:DraggableViewContainer x:Name="dvc2"
                BackgroundColor="AliceBlue">

        </customControl:DraggableViewContainer>

        <customControl:DraggableViewContainer x:Name="dvc3"
                BackgroundColor="LightYellow"/>

    </StackLayout>


</ContentPage>